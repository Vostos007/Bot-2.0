[Unit]
Description=Telegram Bot Service
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/telegram-bot/Bot-2.0
Environment=PATH=/opt/telegram-bot/Bot-2.0/venv/bin
ExecStart=/opt/telegram-bot/Bot-2.0/venv/bin/python main.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target